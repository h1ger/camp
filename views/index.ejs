<% include ./partials/header %>

<div class="container text-center">

    <div class="row">
        <% campgrounds.forEach(function(campground){%>
            <div class="col-2 mx-auto">
                <div class="container">
                    <h5><%=campground.title %></h5>
                        <img class="img-thumbnail img-fluid" src="<%=campground._image%>" alt="user_img">
                    <p><%=campground.info%></p>
                    <a class="btn btn-primary" href="/campgrounds/camp/<%=campground._id%>">More info...</a>
                </div>
            </div>
        <% }); %>    
    </div>
</div>